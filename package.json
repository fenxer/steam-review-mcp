{
  "name": "steam-review-mcp",
  "type": "module",
  "version": "1.0.2",
  "packageManager": "pnpm@10.11.0",
  "description": "Get reviews from steam store with appid",
  "author": "fenx <fenxer@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/fenxer/steam-review-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fenxer/steam-review-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/fenxer/steam-review-mcp/issues"
  },
  "keywords": [
    "mcp",
    "steam",
    "review",
    "modelcontextprotocol"
  ],
  "main": "build/index.mjs",
  "module": "build/index.mjs",
  "bin": {
    "steam-review-mcp": "index.js"
  },
  "files": [
    "build",
    "index.js"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npx tsc --noEmit && unbuild",
    "stub": "unbuild --stub",
    "start": "node build/index.mjs",
    "dev": "node scripts/check-build.mjs && pnpm run start",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "entities": "^6.0.0",
    "ofetch": "^1.4.1",
    "striptags": "^3.2.0",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.1",
    "@types/node": "^22.15.19",
    "eslint": "^9.27.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.4"
  }
}
